package com.example.lian

import io.flutter.embedding.android.FlutterActivity
import io.flutter.embedding.engine.FlutterEngine
import io.flutter.plugin.common.MethodChannel
import android.os.Environment
import android.widget.Toast
import java.io.File

class MainActivity: FlutterActivity() {
    private val CHANNEL = "video_generator"

    override fun configureFlutterEngine(flutterEngine: FlutterEngine) {
        super.configureFlutterEngine(flutterEngine)

        MethodChannel(flutterEngine.dartExecutor.binaryMessenger, CHANNEL).setMethodCallHandler { call, result ->
            if (call.method == "generateVideo") {
                // مثال: إنشاء ملف فيديو فارغ باسم output.mp4
                val downloadsDir = Environment.getExternalStoragePublicDirectory(Environment.DIRECTORY_DOWNLOADS)
                val outputFile = File(downloadsDir, "output.mp4")
                
                try {
                    if (!outputFile.exists()) {
                        outputFile.createNewFile()
                    }
                    result.success("تم إنشاء الفيديو بنجاح! (مسار: ${outputFile.absolutePath})")
                } catch (e: Exception) {
                    result.error("ERROR", "حدث خطأ أثناء إنشاء الفيديو: ${e.message}", null)
                }
            } else {
                result.notImplemented()
            }
        }
    }
}
